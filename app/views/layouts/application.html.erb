<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/8c842679cc.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          
          <a class="navbar-brand" href="/">Bookers</a>
          
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expended="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="my-1 mr-3">
              <%= link_to do %>
                <i class="fa-solid fa-house text-white"></i>
                <sapn class="text-white">Home</sapn>
              <% end %>
            </li>
              
            <li class="my-1 mr-3">
              <%= link_to do %>
                <i class="fa-solid fa-users text-white"></i>
                <sapn class="text-white">Users</sapn>
              <% end %>
            </li>
              
            <li class="my-1 mr-3">
              <%= link_to do %>
                <i class="fa-solid fa-book-open text-white"></i>
                <sapn class="text-white">Books</sapn>
              <% end %>
            </li>
              
            <li class="my-1 mr-3">
              <%= link_to destroy_user_session_path, method: :delete do %>
                <i class="fa-solid fa-right-from-bracket text-white"></i>
                <sapn class="text-white">Log out</sapn>
              <% end %>
            </li>
            <% else %>
            <li class="my-1 mr-3">
              <%= link_to do %>
                <i class="fa-solid fa-house text-white"></i>
                <span class="text-white">Home</span>
              <% end %>
            </li>
              
            <li class="my-1 mr-3">
              <%= link_to do%>
                <i class="fa-solid fa-link text-white"></i>
                <span class="text-white">About</span>
              <% end %>
            </li>
              
            <li class="my-1 mr-3">
              <%= link_to new_user_registration_path do %>
                <i class="fa-solid fa-user-plus text-white"></i>
                <span class="text-white">Sign up</span>
              <% end %>
            </li>
              
            <li class="my-1 mr-3">
              <%= link_to new_user_session_path do %>
                <i class="fa-solid fa-right-to-bracket text-white"></i>
                <span class="text-white">Log in</span>
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main class="mb-auto">
    <%= yield %>
    </main>
    <footer>
      <div class="container mt-10">
        <p class="text-center">CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
