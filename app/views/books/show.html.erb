<div><%= flash[:notice] %></div>

<div class="container">
  <div class="row mt-3">
    <%= render 'books/list', book: @book,user: @user %>
    
    <div class="col-md-8 offset-md-1">
        
    <h2>Book detail</h2>
    
    <table class="table">
      <tbody>
        <tr>
          <td>
            <%= link_to user_path(@user), class:"text-decoration-none" do %>
            　<%= image_tag @book.user.get_profile_image(100,100) %></br>
            　<%= @user.name %>
            <% end %>
          </td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to edit_book_path(@book), class:"btn btn-success btn-sm" do %>
                Edit
              <% end %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
            　<%= link_to book_path(@book), method: :delete, "data-confirm"=>"本当に消しますか？", class:"btn btn-danger btn-sm" do %>
              　Destroy
            　<% end %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
    
    </div>
  </div>
</div>