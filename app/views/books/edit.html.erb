<div class="container">
  <div class="row">
    <div class="mt-3 mx-auto">
      <h1>Editing Book</h1>
        
      <%= form_with model:@book do |f| %>
        <h5>Title</h5>
        <%= f.text_field :title %>
          
        <h5>Opinion</h5>
        <%= f.text_area :body %>
          
        <%= f.submit "Update Book" %>
      <% end %>
      
      <%= link_to "Show", book_path(@book) %>
      |
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>