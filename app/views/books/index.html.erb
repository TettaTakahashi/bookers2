<div class="container">
  <div class="row">
    <%= render 'books/list', book: @book,user: @user %>
    
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>opinion</th>
          </tr>
        </thead>
        
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><%= book.title %></td>
              <td><%= book.body %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>