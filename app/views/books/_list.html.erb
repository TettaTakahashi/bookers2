<div class="col-md-3">
  <h2>User info</h2>
    
    
    <table class="table">
      <tr>
        <th><%= image_tag user.get_profile_image(100, 100) %></th>
      </tr>
      
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      
      <tr>
        <th>introduction</th>
        <th><%= user.introduction %></th>
      </tr>
    </table>  
    
    <a href="<%= edit_user_path(user.id) %>" class="btn btn-outline-secondary btn-block"><i class="fa-solid fa-user-gear"></i></a>
          
          
  <h2>New book</h2>
          
    <%= form_with model: book do |f| %>
      <h5>Title</h5>
      <%= f.text_field :title %>
            
      <h5 class="mt-3">Opinion</h5>
      <%= f.text_area :body %>
            
      <%= f.submit "Create Book", class:"btn btn-success mt-3" %>
    <% end %>
          
</div>